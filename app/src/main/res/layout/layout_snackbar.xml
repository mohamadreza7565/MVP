<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorIndigoDark"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.ryfa.MVP.widgets.TextViewBold
                android:id="@+id/tv_action_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:text="باشه"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.ryfa.MVP.widgets.TextViewBold
                android:id="@+id/tv_action_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_action_config"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:text="انصراف"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <com.ryfa.MVP.widgets.TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/imv_close"
                android:layout_toRightOf="@+id/tv_action_cancel"
                android:gravity="right|top"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imv_close"
                android:layout_width="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_close"
                android:layout_alignTop="@+id/tv_action_config"
                android:layout_alignBottom="@+id/tv_action_config"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                app:tint="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>