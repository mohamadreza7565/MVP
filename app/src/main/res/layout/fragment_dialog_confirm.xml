<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:toos="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.ryfa.MVP.widgets.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorIndigoDark"
        android:id="@+id/tv_title"
        toos:text="عنوان" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrey_100"/>

    <com.ryfa.MVP.widgets.TextView
        android:layout_width="match_parent"
        android:gravity="right"
        android:id="@+id/tv_discription"
        android:layout_margin="20dp"
        toos:text="متن پیام دیالوگ"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="left"
    android:layout_height="wrap_content">

    <com.ryfa.MVP.widgets.TextViewBold
        android:layout_width="wrap_content"
        android:text="بله"
        android:id="@+id/btn_confirm"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/colorGreenDark"
        android:layout_height="wrap_content"/>

    <com.ryfa.MVP.widgets.TextViewBold
        android:layout_width="wrap_content"
        android:text="خیر"
        android:id="@+id/btn_cansel"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/colorRedDark"
        android:layout_height="wrap_content"/>

</LinearLayout>



</LinearLayout>